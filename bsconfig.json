{
  "rootDir": "framework/src",
  "files": [
    "manifest",
    "source/**/*.*",
    "components/**/*.*",
    "!**/CodeCoverage.brs",
    "!**/*.spec.bs"
  ],
  "autoImportComponentScript": true,
  "createPackage": false,
  "stagingDir": "dist",
  "diagnosticFilters": [
    "**/*.spec.bs",
    {
      "src": "**/roku_modules/**/*.*",
      "codes": [1107, 1009]
    }
  ]
  //   "plugins": ["@rokucommunity/bslint"]
}
