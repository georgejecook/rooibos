{
  "rootDir": "src",
  "files": [
    "manifest",
    "source/**/*.*",
    "components/**/*.*"
  ],
  "autoImportComponentScript": true,
  "createPackage": false,
  "stagingFolderPath": "build",
  "diagnosticFilters": [
    {
      "src": "**/roku_modules/**/*.*",
      "codes": [
        1107,
        1009
      ]
    }
  ],
  "plugins": [
    "../bsc-plugin/src/plugin.ts"
  ],
  "require": [
    "ts-node/register"
  ],
  "rooibos": {
    "showOnlyFailures": true,
    "catchCrashes": true,
    "lineWidth": 70,
    "failFast": false,
    "sendHomeOnFinish": false
  },
  "sourceMap": true
}