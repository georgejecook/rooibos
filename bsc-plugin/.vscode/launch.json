{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run tests",
            "type": "pwa-node",
            "request": "launch",
            "smartStep": false,
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "sourceMaps": true,
            "args": [
                "--timeout",
                "0"
            ],
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}